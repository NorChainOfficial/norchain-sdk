# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1

# NorStudio Configuration
NEXT_PUBLIC_NORSTUDIO_URL=http://localhost:3003
NEXT_PUBLIC_APP_NAME=NorStudio
NEXT_PUBLIC_APP_VERSION=1.0.0

# NorChain RPC Configuration
NEXT_PUBLIC_NORCHAIN_RPC=https://rpc.norchain.org
NEXT_PUBLIC_NORCHAIN_RPC_TESTNET=https://testnet-rpc.norchain.org
NEXT_PUBLIC_CHAIN_ID=65001
NEXT_PUBLIC_TESTNET_CHAIN_ID=65002

# Explorer Integration
NEXT_PUBLIC_EXPLORER_URL=http://localhost:3002
NEXT_PUBLIC_EXPLORER_API_URL=http://localhost:3002/api

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_TUTORIALS=true
NEXT_PUBLIC_ENABLE_CONTRACT_VERIFICATION=true
NEXT_PUBLIC_ENABLE_DEPLOYMENT=true
NEXT_PUBLIC_ENABLE_COLLABORATION=false

# AI Configuration
NEXT_PUBLIC_AI_CHAT_ENDPOINT=/api/v1/ai/chat
NEXT_PUBLIC_AI_AUDIT_ENDPOINT=/api/v1/ai/audit-contract
NEXT_PUBLIC_AI_ANALYZE_TX_ENDPOINT=/api/v1/ai/analyze-transaction
NEXT_PUBLIC_AI_GENERATE_ENDPOINT=/api/v1/ai/generate-contract

# Monaco Editor Configuration
NEXT_PUBLIC_MONACO_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.50.0

# Storage Configuration (for projects)
NEXT_PUBLIC_STORAGE_TYPE=local # Options: local, remote
NEXT_PUBLIC_STORAGE_API_ENDPOINT=/api/v1/projects

# Compiler Configuration
NEXT_PUBLIC_COMPILER_VERSION=0.8.20
NEXT_PUBLIC_COMPILER_ENDPOINT=/api/v1/compile

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
