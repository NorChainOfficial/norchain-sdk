# Xaheen Chain Explorer - Environment Variables Example
# Copy this file to .env.local for local development or .env.production for production

# Backend API Configuration (XaheenSDK Backend)
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# RPC Configuration
NEXT_PUBLIC_RPC_URL=http://localhost:8545
NEXT_PUBLIC_CHAIN_ID=65001

# WebSocket Configuration (for real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:4001
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Chain Configuration
NEXT_PUBLIC_DENOM=XHT
NEXT_PUBLIC_DECIMALS=18
NEXT_PUBLIC_NETWORK_NAME=Xaheen Chain
NEXT_PUBLIC_CURRENCY_SYMBOL=XHT
NEXT_PUBLIC_TOTAL_SUPPLY=21000000000000000000000000

# Feature Flags
NEXT_PUBLIC_ENABLE_FAUCET=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Refresh Intervals (milliseconds)
NEXT_PUBLIC_BLOCK_REFRESH_INTERVAL=3000
NEXT_PUBLIC_STATS_REFRESH_INTERVAL=5000

# Explorer Settings
NEXT_PUBLIC_BLOCKS_PER_PAGE=20
NEXT_PUBLIC_TXS_PER_PAGE=20

# URLs
NEXT_PUBLIC_EXPLORER_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=http://localhost:3001

# Smart Contracts on Xaheen Chain
NEXT_PUBLIC_BTCBR_ADDRESS=0x0cF8e180350253271f4b917CcFb0aCCc4862F262
