# Bitcoin BR Chain - Next.js Explorer Environment (Docker)

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:18000/api/v1
NEXT_PUBLIC_CHAIN_ID=bitcoinbr
NEXT_PUBLIC_RPC_URL=http://localhost:26757
NEXT_PUBLIC_REST_URL=http://localhost:11317

# Chain Configuration
NEXT_PUBLIC_DENOM=btcbr
NEXT_PUBLIC_DECIMALS=26
NEXT_PUBLIC_NETWORK_NAME="Bitcoin BR Chain (Local)"

# Feature Flags
NEXT_PUBLIC_ENABLE_FAUCET=true
NEXT_PUBLIC_FAUCET_URL=http://localhost:14500

# Analytics (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Refresh Intervals (milliseconds)
NEXT_PUBLIC_BLOCK_REFRESH_INTERVAL=5000
NEXT_PUBLIC_STATS_REFRESH_INTERVAL=10000
